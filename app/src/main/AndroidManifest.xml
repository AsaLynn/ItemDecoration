<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zxn.itemdecoration">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.EnterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.GridInsideActivity" />
        <activity android:name=".activity.GridFootActivity" />
        <activity android:name=".activity.GridHeadFootActivity" />
        <activity android:name=".activity.GridHeadActivity" />
        <activity android:name=".activity.MainActivity">

        </activity>
        <activity android:name=".activity.HorizontalItemDecorationAty" />
        <activity android:name=".activity.VerticalItemDecorationAty" />
        <activity android:name=".activity.GridItemDecorationAty" />
        <activity android:name=".activity.MultipleActivity" />
        <activity
            android:name=".activity.GridLayoutManagerActivity"
            android:screenOrientation="fullSensor" />


        <activity
            android:name="com.yanyusong.divideritemdecoration.MainOldActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity
            tools:ignore="LockedOrientationActivity"
            android:name="com.yanyusong.divideritemdecoration.LinearLayoutManagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            tools:ignore="LockedOrientationActivity"
            android:name="com.yanyusong.divideritemdecoration.GridLayoutManager1Activity"
            android:screenOrientation="portrait"/>
        <activity
            tools:ignore="LockedOrientationActivity"
            android:name="com.yanyusong.divideritemdecoration.GridLayoutManagerActivity"
            android:screenOrientation="portrait"/>
        <activity
            tools:ignore="LockedOrientationActivity"
            android:name="com.yanyusong.divideritemdecoration.GridLayoutManager2Activity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>